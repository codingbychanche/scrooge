<!--    Defines a custom shape which can be used as a background drawable
        Inside a 'Button'
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true"
    android:shape="rectangle">

    <size
        android:height="20dp"
        android:width="100dp" />

    <gradient
        android:startColor="#015F56"
        android:endColor="#013D36"
        android:angle="45"
        android:type="linear"/>

    <stroke
        android:width="0dp"
        android:color="@color/colorPrimaryDark" />

    <padding
        android:top="5dp"
        android:left="5dp"
        android:bottom="5dp"
        android:right="5dp"/>
</shape>